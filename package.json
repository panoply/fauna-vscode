{
  "name": "fql",
  "displayName": "Fauna",
  "description": "FQL language support",
  "icon": "icons/fauna-light.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fauna/fauna-vscode"
  },
  "publisher": "Fauna",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:fql"
  ],
  "main": "./out/extension.js",
  "dependencies": {
    "cross-fetch": "^4.0.0",
    "vscode-languageclient": "^8.0.2"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "eslint-plugin-prettier": "^5.0.0",
    "glob": "^10.3.3",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "download-analyzer": "bash ./scripts/download-analyzer.sh",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint && yarn run download-analyzer",
    "lint": "eslint src --ext ts",
    "test": "yarn pretest && node ./out/test/runTest.js",
    "fmt": "prettier -w src"
  },
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "command": "fauna.runQuery",
          "group": "navigation@0",
          "when": "resourceLangId == fql"
        }
      ]
    },
    "configuration": {
      "title": "Fauna",
      "type": "object",
      "properties": {
        "fauna.dbSecret": {
          "type": "string",
          "default": "",
          "description": "The secret to use to connnect to your fauna database.",
          "scope": "window"
        },
        "fauna.endpoint": {
          "type": "string",
          "default": "https://db.fauna.com",
          "description": "The fauna endpoint url to use. This should typically be 'https://db.fauna.com'.",
          "scope": "window"
        }
      }
    },
    "commands": [
      {
        "command": "fauna.runQuery",
        "title": "Fauna: Run Query"
      },
      {
        "command": "fauna.runQueryAsRole",
        "title": "Fauna: Run Query as Role"
      },
      {
        "command": "fauna.runQueryAsDoc",
        "title": "Fauna: Run Query as Document"
      },
      {
        "command": "fauna.runQueryWithSecret",
        "title": "Fauna: Run Query with Secret"
      },
      {
        "command": "fauna.togglePlayground",
        "title": "Fauna: Toggle Playground"
      }
    ],
    "languages": [
      {
        "id": "fql",
        "extensions": [
          ".fql"
        ],
        "icon": {
          "light": "./icons/fauna.svg",
          "dark": "./icons/fauna-light.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "fql",
        "scopeName": "source.fql",
        "path": "./syntax/fql.tmGrammar.json"
      }
    ],
    "keybindings": [
      {
        "command": "fauna.runQuery",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == fql"
      },
      {
        "command": "fauna.togglePlayground",
        "key": "ctrl+l",
        "mac": "cmd+l"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fauna-explorer",
          "title": "Fauna",
          "icon": "icons/fauna-light.png"
        }
      ]
    },
    "views": {
      "fauna-explorer": [
        {
          "id": "welcomeView",
          "name": "Fauna"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "welcomeView",
        "contents": "Welcome to the Fauna VSCode extension! To get started, configure your environment:\n[Configure Fauna Extension](command:workbench.action.openSettings?%22fauna%22)\nOnce configured, open the FQL Playground to begin writing queries!\n[Open FQL Playground](command:fauna.togglePlayground)\n"
      }
    ]
  }
}
